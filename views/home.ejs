<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="./index.css" />
    <link rel="stylesheet" href="./home.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="app-container">
      <div class="app-bar">
        <div class="left-top">
          <p>Cloud Nest</p>
        </div>
        <div class="right-top">
          <p>Hi, <%= user.firstName %> |</p>
          <a href="/logout">Logout</a>
        </div>
      </div>

      <div class="main-content">
        <div class="add-folder-file">
          <div class="add-folder">
            <button id="openFolderModal">New Folder</button>
          </div>
          <div class="add-file">
            <button id="openFileModal">Upload File</button>
          </div>
        </div>
        <div class="dashboard">
          <% if (folders.length || files.length) { %>
          <table class="items-table">
            <thead>
              <tr>
                <th></th>
                <th>Name</th>
                <th>Size</th>
                <th>Created</th>
                <th>Last Updated</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% folders.forEach(folder => { %>
              <tr>
                <td><img src="/images/folder-icon.png" alt="Folder" /></td>
                <td><%= folder.name %></td>
                <td>-</td>
                <!-- No size for folders -->
                <td><%= folder.createdAtAgo %></td>
                <td><%= folder.updatedAtAgo %></td>
                <td>
                  <div class="options">
                    <span class="options-btn">⋮</span>
                    <!-- Add edit and delete actions -->
                    <div class="dropdown-content">
                      <a href="/edit-folder/<%= folder.id %>">Edit</a>
                      <a
                        href="/delete-folder/<%= folder.id %>"
                        onclick="return confirm('Are you sure?')"
                        >Delete</a
                      >
                    </div>
                  </div>
                </td>
              </tr>
              <% }); %> <% files.forEach(file => { %>
              <tr>
                <td><img src="/images/file-icon.png" alt="File" /></td>
                <td><%= file.name %></td>
                <td><%= (Number(file.size) / (1024)).toFixed(2) %> KB</td>
                <td><%= file.createdAtAgo %></td>
                <td><%= file.updatedAtAgo %></td>
                <td>
                  <div class="options">
                    <span class="options-btn">⋮</span>
                    <!-- Add edit and delete actions -->
                    <div class="dropdown-content">
                      <a href="/edit-file/<%= file.id %>">Edit</a>
                      <a
                        href="/delete-file/<%= file.id %>"
                        onclick="return confirm('Are you sure?')"
                        >Delete</a
                      >
                    </div>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <% } else { %>
          <div class="empty-state">
            <p>
              You don't have any files or folders yet. Start by creating a
              folder or uploading a file!
            </p>
          </div>
          <% } %>
        </div>
        <!-- Folder model -->
        <div id="folderModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Create New Folder</h2>
            <form id="newFolderForm" action="/add-folder" method="POST">
              <!-- <label>Folder Name</label> -->
              <input
                type="text"
                id="folderName"
                name="name"
                placeholder="Folder Name"
              />
              <button type="submit">Create</button>
            </form>
          </div>
        </div>

        <!-- File Modal -->
        <div id="fileModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Upload File</h2>
            <form
              id="uploadFileForm"
              action="/upload-file"
              method="POST"
              name="name"
              enctype="multipart/form-data"
            >
              <input type="file" id="fileInput" name="file" />
              <button type="submit">Upload</button>
            </form>
          </div>
        </div>
      </div>

      <!-- <%- include('partials/footer') %> -->
      <footer>
        <p>
          Created By |
          <a href="https://github.com/MhmdFais" target="_blank">MHMD</a>
        </p>
      </footer>
    </div>

    <script src="/js/folder.js"></script>
  </body>
</html>
