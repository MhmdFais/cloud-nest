<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="./index.css" />
    <link rel="stylesheet" href="./home.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="app-bar">
      <div class="left-top">
        <p>Cloud Nest</p>
      </div>
      <div class="right-top">
        <p>Hi, <%= user.firstName %> |</p>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <div class="main-content">
      <div class="add-folder-file">
        <div class="add-folder">
          <button id="openFolderModal">New Folder</button>
        </div>
        <div class="add-file">
          <button id="openFileModal">Upload File</button>
        </div>
      </div>
      <div class="dashboard">

        <% if (folders && folders.length > 0) { %>
          <div class="folders-section">
            <!-- <h2>Folders</h2> -->
            <div class="folders-grid">
              <% folders.forEach(folder => { %>
                <div class="folder-item">
                  <img src="/images/folder-icon.png" alt="Folder">
                  <p><%= folder.name %></p>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>
    
        <% if (files && files.length > 0) { %>
          <div class="files-section">
            <!-- <h2>Files</h2> -->
            <div class="files-grid">
              <% files.forEach(file => { %>
                <div class="file-item">
                  <img src="/images/file-icon.png" alt="File">
                  <p><%= file.name %></p>
                  <p class="item-details"><%= file.formattedSize %></p>
                  <a href="<%= file.url %>" target="_blank">Download</a>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>
    
        <% if ((!folders || folders.length === 0) && (!files || files.length === 0)) { %>
          <div class="empty-state">
            <p>You don't have any files or folders yet. Start by creating a folder or uploading a file!</p>
          </div>
        <% } %>
      </div>

      </div>
    </div>

    <!-- Folder model -->
    <div id="folderModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Create New Folder</h2>
        <form id="newFolderForm" action="/add-folder" method="POST">
          <!-- <label>Folder Name</label> -->
          <input
            type="text"
            id="folderName"
            name="name"
            placeholder="Folder Name"
          />
          <button type="submit">Create</button>
        </form>
      </div>
    </div>

    <!-- File Modal -->
    <div id="fileModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Upload File</h2>
        <form
          id="uploadFileForm"
          action="/upload-file"
          method="POST"
          name="name"
          enctype="multipart/form-data"
        >
          <input type="file" id="fileInput" name="file" />
          <button type="submit">Upload</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
    <script src="/js/folder.js"></script>
  </body>
</html>
